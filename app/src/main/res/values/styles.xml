<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="button.color" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryVariant">@color/gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray</item>
        <item name="colorSecondaryVariant">@color/gray</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="textFillColor">@color/white</item>
    </style>

    <style name ="defaultButtonColor" parent="TextAppearance.AppCompat.Button">
        <item name = "android:backgroundTint">@color/gray</item>
    </style>
    <style name="rightInLetter" parent ="TextAppearance.AppCompat.Button">
        <item name="android:backgroundTint">@color/green</item>
    </style>

    <style name="isInLetter" parent = "TextAppearance.AppCompat.Button">
        <item name="android:backgroundTint">@color/yellow</item>
    </style>

    <style name="notInLetter" parent ="TextAppearance.AppCompat.Button">
        <item name = "android:backgroundTint">@color/charcoal</item>
    </style>
</resources>