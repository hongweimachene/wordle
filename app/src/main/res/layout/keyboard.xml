<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/merge_layer">

    <LinearLayout
        android:id="@+id/outer_layer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/layer_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:orientation="horizontal"
            android:padding="5dp"
            >

            <Button
                style="@style/defaultButtonColor"
                android:tag="unchanged"
                android:id="@+id/button_q"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Q"
                android:layout_weight="1"
                android:paddingHorizontal="0dp"
                />

            <Button
                style="@style/defaultButtonColor"
                android:tag="unchanged"
                android:id="@+id/button_w"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingHorizontal="0dp"
                android:text="W" />

            <Button
                style="@style/defaultButtonColor"
                android:tag="unchanged"
                android:id="@+id/button_e"
                android:layout_width="0dp"
                android:paddingHorizontal="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="E" />

            <Button
                style="@style/defaultButtonColor"
                android:tag="unchanged"
                android:id="@+id/button_r"
                android:layout_width="0dp"
                android:paddingHorizontal="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="R" />

            <Button
                style="@style/defaultButtonColor"
                android:tag="unchanged"
                android:id="@+id/button_t"
                android:paddingHorizontal="0dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="T" />

            <Button
                style="@style/defaultButtonColor"
                android:tag="unchanged"
                android:id="@+id/button_y"
                android:paddingHorizontal="0dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Y" />

            <Button
                style="@style/defaultButtonColor"
                android:tag="unchanged"
                android:id="@+id/button_u"
                android:layout_width="0dp"
                android:paddingHorizontal="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/u" />

            <Button
                style="@style/defaultButtonColor"
                android:tag="unchanged"
                android:id="@+id/button_i"
                android:layout_width="0dp"
                android:paddingHorizontal="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="I" />

            <Button
                style="@style/defaultButtonColor"
                android:tag="unchanged"
                android:id="@+id/button_o"
                android:layout_width="0dp"
                android:paddingHorizontal="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="O" />

            <Button
                style="@style/defaultButtonColor"
                android:tag="unchanged"
                android:id="@+id/button_p"
                android:paddingHorizontal="0dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="P" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layer_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <Button
                style="@style/defaultButtonColor"
                android:tag="unchanged"
                android:id="@+id/button_a"
                android:layout_width="0dp"
                android:paddingHorizontal="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="A" />

            <Button
                style="@style/defaultButtonColor"
                android:tag="unchanged"
                android:id="@+id/button_s"
                android:paddingHorizontal="0dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="S" />

            <Button
                style="@style/defaultButtonColor"
                android:tag="unchanged"
                android:id="@+id/button_d"
                android:paddingHorizontal="0dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="D" />

            <Button
                style="@style/defaultButtonColor"
                android:tag="unchanged"
                android:id="@+id/button_f"
                android:paddingHorizontal="0dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="F" />

            <Button
                style="@style/defaultButtonColor"
                android:tag="unchanged"
                android:id="@+id/button_g"
                android:paddingHorizontal="0dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="G" />

            <Button
                style="@style/defaultButtonColor"
                android:tag="unchanged"
                android:id="@+id/button_h"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="H"
                android:paddingHorizontal="0dp"/>

            <Button
                style="@style/defaultButtonColor"
                android:tag="unchanged"
                android:id="@+id/button_j"
                android:paddingHorizontal="0dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="J" />

            <Button
                style="@style/defaultButtonColor"
                android:tag="unchanged"
                android:id="@+id/button_k"
                android:paddingHorizontal="0dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="K" />

            <Button
                style="@style/defaultButtonColor"
                android:tag="unchanged"
                android:id="@+id/button_l"
                android:paddingHorizontal="0dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="L" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_enter"
                android:paddingHorizontal="0dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.75"
                android:text="Enter"
                android:textSize="8sp" />

            <Button
                style="@style/defaultButtonColor"
                android:tag="unchanged"
                android:id="@+id/button_z"
                android:paddingHorizontal="0dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Z" />

            <Button
                style="@style/defaultButtonColor"
                android:tag="unchanged"
                android:id="@+id/button_x"
                android:paddingHorizontal="0dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="X" />

            <Button
                style="@style/defaultButtonColor"
                android:tag="unchanged"
                android:id="@+id/button_c"
                android:paddingHorizontal="0dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="C" />

            <Button
                style="@style/defaultButtonColor"
                android:tag="unchanged"
                android:id="@+id/button_v"
                android:paddingHorizontal="0dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="V" />

            <Button
                style="@style/defaultButtonColor"
                android:tag="unchanged"
                android:id="@+id/button_b"
                android:paddingHorizontal="0dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="B" />

            <Button
                style="@style/defaultButtonColor"
                android:tag="unchanged"
                android:id="@+id/button_n"
                android:paddingHorizontal="0dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="N" />


            <Button
                style="@style/defaultButtonColor"
                android:tag="unchanged"
                android:id="@+id/button_m"
                android:paddingHorizontal="0dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="M" />

            <Button
                android:id="@+id/button_delete"
                android:paddingHorizontal="0dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:text="Del"
                android:textSize="8sp" />

        </LinearLayout>
    </LinearLayout>
</merge>